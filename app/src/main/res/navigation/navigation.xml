<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/navigation_FragmentHome">

    <fragment
        android:id="@+id/navigation_FragmentHome"
        android:name="com.danielchwh.devdemo.Navigation_FragmentHome"
        android:label="Home fragment"
        tools:layout="@layout/navigation_fragment1">
        <action
            android:id="@+id/action_navigation_FragmentHome_to_navigation_FragmentSecond"
            app:destination="@id/navigation_FragmentSecond"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/navigation_FragmentSecond"
        android:name="com.danielchwh.devdemo.Navigation_FragmentSecond"
        android:label="Second fragment"
        tools:layout="@layout/navigation_fragment2" />
</navigation>