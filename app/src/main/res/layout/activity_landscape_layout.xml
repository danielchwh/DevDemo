<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandscapeLayout">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_Landscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/textView_Landscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try to rotation!"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline1_Landscape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1_Landscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="This is a button"
        app:layout_constraintBottom_toTopOf="@+id/button2_Landscape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Landscape"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/button2_Landscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="This is a button x2"
        app:layout_constraintBottom_toTopOf="@+id/button3_Landscape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1_Landscape" />

    <Button
        android:id="@+id/button3_Landscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a button x3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2_Landscape" />
</androidx.constraintlayout.widget.ConstraintLayout>