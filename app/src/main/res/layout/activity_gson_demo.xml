<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GsonDemo">

    <TextView
        android:id="@+id/textView1_Gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Temperature"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2_Gson"
        app:layout_constraintEnd_toStartOf="@+id/textView7_Gson"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textView2_Gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Temperature (feel)"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3_Gson"
        app:layout_constraintStart_toStartOf="@+id/textView1_Gson"
        app:layout_constraintTop_toBottomOf="@+id/textView1_Gson" />

    <TextView
        android:id="@+id/textView3_Gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Maximum temperature"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4_Gson"
        app:layout_constraintStart_toStartOf="@+id/textView1_Gson"
        app:layout_constraintTop_toBottomOf="@+id/textView2_Gson" />

    <TextView
        android:id="@+id/textView4_Gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Minimum temperature"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5_Gson"
        app:layout_constraintStart_toStartOf="@+id/textView1_Gson"
        app:layout_constraintTop_toBottomOf="@+id/textView3_Gson" />

    <TextView
        android:id="@+id/textView5_Gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Atmospheric pressure"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6_Gson"
        app:layout_constraintStart_toStartOf="@+id/textView1_Gson"
        app:layout_constraintTop_toBottomOf="@+id/textView4_Gson" />

    <TextView
        android:id="@+id/textView6_Gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Humidity"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button_Gson"
        app:layout_constraintStart_toStartOf="@+id/textView1_Gson"
        app:layout_constraintTop_toBottomOf="@+id/textView5_Gson" />

    <TextView
        android:id="@+id/textView7_Gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView1_Gson"
        app:layout_constraintTop_toTopOf="@+id/textView1_Gson" />

    <TextView
        android:id="@+id/textView8_Gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView7_Gson"
        app:layout_constraintTop_toTopOf="@+id/textView2_Gson" />

    <TextView
        android:id="@+id/textView9_Gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView7_Gson"
        app:layout_constraintTop_toTopOf="@+id/textView3_Gson" />

    <TextView
        android:id="@+id/textView10_Gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView7_Gson"
        app:layout_constraintTop_toTopOf="@+id/textView4_Gson" />

    <TextView
        android:id="@+id/textView11_Gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView7_Gson"
        app:layout_constraintTop_toTopOf="@+id/textView5_Gson" />

    <TextView
        android:id="@+id/textView12_Gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView7_Gson"
        app:layout_constraintTop_toTopOf="@+id/textView6_Gson" />

    <Button
        android:id="@+id/button_Gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Get data"
        app:layout_constraintBottom_toTopOf="@+id/textView13_Gson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6_Gson" />

    <TextView
        android:id="@+id/textView13_Gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data is from http://api.openweathermap.org/"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Gson" />

</androidx.constraintlayout.widget.ConstraintLayout>